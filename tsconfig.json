{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",                  
    "declaration": true,                   
    "declarationMap": true,                
    "outDir": "./dist",                     
    "rootDir": "./src",                      
    "strict": true,                          
    "moduleResolution": "node",                                     
    "esModuleInterop": true,      
    "inlineSourceMap": true,               
    "inlineSources": true,                 
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "_tests_",
    "**/*.spec.ts"
  ]
  
}
